                "cap.support (Not restricted)"
              ]
            },
            "ams": {
              "autoCompile": true,
              "cache": {
                "TTL": 0
              }
            }
          }
        }
      },
      "[production]": {
        "db": "hana",
        "auth": "ias"
      },
      "destinations": true,
      "middlewares": true
